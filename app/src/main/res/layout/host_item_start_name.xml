<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_startNameItem_name"
            style="@style/ListMe_Text"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="name" />

        <Button
            android:id="@+id/button_startNameItem_checkout"
            style="@style/ListMe_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkout_text"
            app:layout_constraintBottom_toBottomOf="@+id/textView_startNameLastName"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView_startNameLastName"
            style="@style/ListMe_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/side_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_startNameItem_name"
            tools:text="Nachname" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>