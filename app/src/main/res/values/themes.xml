<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.ListMe" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue_900</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="titleTextColor">@color/black</item>
    </style>


    <style name="ListMe_Button" parent="Widget.MaterialComponents.Button">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="elevation">5dp</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="ListMe_Button_Item" parent="ListMe_Button">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="backgroundTint">@color/green_900</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="ListMe_Button_Positive" parent="ListMe_Button">
        <item name="backgroundTint">@color/green_900</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="ListMe_Button_Negative" parent="ListMe_Button">
        <item name="backgroundTint">@android:color/holo_red_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="ListMe_ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/image_button_background</item>
        <item name="android:elevation">5dp</item>
        <item name="tint">@color/green_900</item>
    </style>

    <style name="ListMe_ImageButton_Positive" parent="ListMe_ImageButton">
        <item name="android:background">@drawable/image_button_background_positive</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="ListMe_ImageButton_Negative" parent="ListMe_ImageButton">
        <item name="android:background">@drawable/image_button_background_negative</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="ListMe_Text">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="ListMe_Text_Item" parent="ListMe_Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ListMe_Text_Header" parent="ListMe_Text">
        <item name="android:textSize">@dimen/text_size_header</item>
    </style>

    <style name="ListMe_Card" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/green_900</item>
    </style>

    <style name="ListMe_InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/ListMe_TextAppearance</item>
    </style>

    <style name="ListMe_TextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto_mono</item>
    </style>

    <style name="ListMe_InputText">
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ListMe_FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/green_900</item>
        <item name="borderWidth">1dp</item>
        <item name="elevation">5dp</item>
        <item name="tint">@color/white</item>
    </style>

</resources>