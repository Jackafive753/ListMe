<resources>
    <!-- Base application theme. -->
    <style name="Theme.ListMe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_200</item>
        <item name="colorPrimaryVariant">@color/green_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_complementary_200</item>
        <item name="colorSecondaryVariant">@color/green_complementary_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="MainButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ListMe_Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="elevation">5dp</item>
    </style>

    <style name="ListMe_Button_Positive" parent="ListMe_Button">

    </style>

    <style name="ListMe_Button_Negative" parent="ListMe_Button">

    </style>

    <style name="ListMe_Text">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_mono</item>
    </style>

    <style name="ListMe_Text_Positive" parent="ListMe_Text">
        <item name="android:textColor">@color/green_700</item>
    </style>

    <style name="ListMe_Text_Header" parent="ListMe_Text">
        <item name="android:textSize">18sp</item>
    </style>

</resources>